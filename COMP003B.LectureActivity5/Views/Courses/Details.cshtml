@model COMP003B.LectureActivity5.Models.Course

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
</div>

<!-- Display all of the students enrolled in the course -->
<div class="col-md-4">

<h4>Students</h4>
<ul>

		@foreach (Student student in ViewBag.Students)
		{
			<li>@student.Name</li>
		}

</ul>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CourseID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
